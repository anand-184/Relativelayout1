<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/pbk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/b1"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="-10dp"
        android:layout_toStartOf="@+id/b1"
        android:background="#DD0D2C"
        android:text="PBK  "
        android:textColor="@color/white"
        android:textSize="40sp" />
    <TextView
        android:id="@+id/gt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_alignBaseline="@+id/rcb"
        android:layout_above="@+id/pbk"
        android:background="#260E6C"
        android:text="GT "
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/csk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/b1"
        android:layout_marginStart="-10dp"
        android:layout_toEndOf="@id/b1"
        android:background="#EA950C"
        android:text="  CSK"
        android:textColor="#EFF3F4"
        android:textSize="40sp" />
    <TextView
        android:id="@+id/rcb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RCB"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="#C62828"
        android:layout_above="@+id/b1"/>
    <TextView
        android:id="@+id/mi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MI"
        android:textSize="30sp"
        android:layout_marginStart="45dp"
        android:textColor="@color/white"
        android:layout_alignBaseline="@id/rcb"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="#0522F6"
        android:layout_toEndOf="@id/rcb"
        android:layout_above="@+id/csk"/>

    <TextView
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INDIA"
        android:background="#0294EC"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Team"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:background="#C62828"
        android:layout_below="@+id/pbk"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pbk"
        android:layout_marginStart="50dp"
        android:layout_marginTop="150dp"
        android:background="#050505"
        android:text="Tap to continue"
        android:textColor="@color/white"
        android:textSize="30sp" />

</RelativeLayout>